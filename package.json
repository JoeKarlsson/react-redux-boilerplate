{
  "name": "react-redux-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "test": "jest --coverage",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "test:watch": "jest --watch",
    "test:updateSnapshot": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "lint": "eslint src && npm run lint:css",
    "lint:fix": "npm run lint -- --fix",
    "lint:out": "npm run lint -- -f checkstyle -o coverage/checkstyle.xml",
    "lint:css": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:css:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "healthcheck": "npm run lint && npm run lint:css && npm run test:coverage",
    "stats": "webpack --json > webpack.stats.json",
    "commit": "commit-wizard",
    "postinstall": "rimraf dist && set NODE_ENV=production && webpack --config ./webpack.config.js --progress --profile --colors"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "text-summary",
      "text",
      "json",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "declaration-block-no-redundant-longhand-properties": [
        true,
        {
          "ignoreShorthands": [
            "/border/"
          ]
        }
      ]
    }
  },
  "keywords": [
    "react",
    "redux",
    "boilerplate"
  ],
  "author": "Joe Karlson",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-jest": "^21.0.2",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.9.1",
    "enzyme-adapter-react-15": "^1.0.2",
    "es6-promise": "^4.1.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^21.0.2",
    "nock": "^9.0.14",
    "node-sass": "^4.5.0",
    "nyc": "^11.2.1",
    "pre-git": "^3.15.3",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.4.2",
    "react-redux": "^4.4.5",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.0.13",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.5.2",
    "redux-logger": "^2.7.0",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^4.1.1",
    "stats-webpack-plugin": "^0.6.1",
    "style-loader": "^0.13.1",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-dev-server": "^1.16.3",
    "webpack-hot-middleware": "^2.16.1",
    "whatwg-fetch": "^2.0.3",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {},
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "config": {
    "pre-git": {
      "enabled": true,
      "pre-commit": [
        "npm run lint",
        "npm run lint:css"
      ],
      "pre-push": [
        "npm prune",
        "npm install --loglevel=error",
        "npm run healthcheck"
      ],
      "post-commit": [
        "git status"
      ],
      "post-checkout": [],
      "post-merge": [
        "git fetch -p &",
        "npm install --loglevel=error"
      ]
    }
  }
}
