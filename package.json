{
  "name": "react-redux-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "8.7.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development node src/server/server.js",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "test:watch": "cross-env NODE_ENV=test jest --watch --silent",
    "test:updateSnapshot": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "lint": "eslint src && npm run lint:css",
    "lint:fix": "npm run lint -- --fix",
    "lint:out": "npm run lint -- -f checkstyle -o coverage/checkstyle.xml",
    "lint:css": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:css:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "healthcheck": "npm run lint && npm run lint:css && npm run test:coverage",
    "stats": "webpack --json > webpack.stats.json",
    "commit": "commit-wizard",
    "postinstall": "rimraf dist && set NODE_ENV=production && webpack --config ./webpack.config.js --progress --profile --colors",
    "runProd": "export NODE_ENV=production && export PORT=8081 && node src/server/server.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "text-summary",
      "text",
      "json",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "keywords": [
    "react",
    "redux",
    "boilerplate"
  ],
  "author": "Joe Karlson",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "7.x.x",
    "babel-core": "6.x.x",
    "babel-jest": "21.x.x",
    "babel-loader": "7.1.x",
    "babel-preset-es2015": "6.24.x",
    "babel-preset-react": "6.24.x",
    "core-js": "2.5.x",
    "coveralls": "3.0.x",
    "cross-env": "^5.1.0",
    "css-loader": "0.x.x",
    "enzyme": "3.1.x",
    "enzyme-adapter-react-16": "1.0.x",
    "es6-promise": "4.1.x",
    "eslint": "4.9.x",
    "eslint-config-airbnb": "16.1.x",
    "eslint-plugin-import": "2.8.x",
    "eslint-plugin-jsx-a11y": "6.0.x",
    "eslint-plugin-react": "7.4.x",
    "express": "4.16.x",
    "extract-text-webpack-plugin": "3.0.x",
    "fetch-mock": "5.13.x",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "3.0.x",
    "immutable": "3.8.x",
    "isomorphic-fetch": "2.2.x",
    "jest": "21.2.x",
    "node-sass": "4.5.x",
    "nyc": "11.2.x",
    "pre-git": "3.15.x",
    "prop-types": "15.6.x",
    "react": "16.0.x",
    "react-addons-test-utils": "15.6.x",
    "react-dom": "16.0.x",
    "react-redux": "5.0.x",
    "react-router": "4.2.x",
    "react-router-dom": "4.2.x",
    "react-scripts": "1.0.x",
    "react-test-renderer": "^16.0.0-alpha.12",
    "redux": "^3.5.2",
    "redux-logger": "3.0.x",
    "redux-mock-store": "1.3.x",
    "redux-thunk": "2.2.x",
    "sass-loader": "6.0.x",
    "stats-webpack-plugin": "0.6.x",
    "style-loader": "0.19.x",
    "stylelint": "8.2.x",
    "stylelint-config-standard": "17.0.x",
    "stylelint-scss": "2.1.x",
    "stylelint-webpack-plugin": "0.9.x",
    "supertest": "3.0.x",
    "webpack": "3.8.x",
    "webpack-dev-middleware": "1.10.x",
    "webpack-dev-server": "2.9.x",
    "webpack-hot-middleware": "2.16.x",
    "whatwg-fetch": "2.0.x",
    "xmlhttprequest": "1.8.x"
  },
  "devDependencies": {},
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "config": {
    "pre-git": {
      "enabled": true,
      "pre-commit": [
        "npm run lint",
        "npm run lint:css"
      ],
      "pre-push": [
        "npm prune",
        "npm install --loglevel=error",
        "npm run healthcheck"
      ],
      "post-commit": [
        "git status"
      ],
      "post-checkout": [],
      "post-merge": [
        "git fetch -p &",
        "npm install --loglevel=error"
      ]
    }
  }
}
